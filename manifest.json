
{
  "manifest_version": 3,
  "name": "YouTube Video Summarizer",
  "version": "1.0",
  "description": "Summarizes YouTube videos using Python backend.",
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
      }
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:5000/"]
}
